<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center">Sensations au col du cycle {{model.id}}</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Jour du cycle</th>
          <th>Sensation</th>
          <th>Ouverture</th>
          <th>Position</th>
          <th>Inclinaison</th>
          <th>Commentaire</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      {{#each cervixFeeling in model.cervixFeelings}}
        {{#if cervixFeeling.isNew}}
        {{else}}
          {{#if cervixFeeling.is_cervix_peak_plus_3_days}}
            <tr data-toggle="tooltip" data-placement="left" title="Pic du col + 3 jours, début de la phase III" class="cervix-feeling text-center info">
              <td>{{cervixFeeling.cycle_day_number}} ({{date-format cervixFeeling.date "DD/MM/YY"}})</td>
              <td {{bindAttr class=cervixFeeling.sensation}}>&nbsp;</td>
              <td {{bindAttr class=cervixFeeling.opening}}>&nbsp;</td>
              <td {{bindAttr class=cervixFeeling.position}}>&nbsp;</td>
              <td {{bindAttr class=cervixFeeling.inclining}}>&nbsp;</td>
              <td>{{cervixFeeling.comment}}</td>
              <td>
                {{#link-to 'cervix-feeling' model.id cervixFeeling.id classNames="btn btn-default btn-sm"}}
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                {{/link-to}}
                <button {{action 'remove' cervixFeeling}} type="button" class="btn btn-default btn-sm">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
              </td>
            </tr>
          {{else}}
            {{#if cervixFeeling.is_first_day_of_cervix_change}}
              <tr data-toggle="tooltip" data-placement="left" title="Premier jour de changement du col, début de la phase II" class="cervix-feeling text-center info">
                <td>{{cervixFeeling.cycle_day_number}} ({{date-format cervixFeeling.date "DD/MM/YY"}})</td>
                <td {{bindAttr class=cervixFeeling.sensation}}>&nbsp;</td>
                <td {{bindAttr class=cervixFeeling.opening}}>&nbsp;</td>
                <td {{bindAttr class=cervixFeeling.position}}>&nbsp;</td>
                <td {{bindAttr class=cervixFeeling.inclining}}>&nbsp;</td>
                <td>{{cervixFeeling.comment}}</td>
                <td>
                  {{#link-to 'cervix-feeling' model.id cervixFeeling.id classNames="btn btn-default btn-sm"}}
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  {{/link-to}}
                  <button {{action 'remove' cervixFeeling}} type="button" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  </button>
                </td>
              </tr>
            {{else}}
              <tr class="cervix-feeling text-center">
                <td>{{cervixFeeling.cycle_day_number}} ({{date-format cervixFeeling.date "DD/MM/YY"}})</td>
                <td {{bindAttr class=cervixFeeling.sensation}}>&nbsp;</td>
                <td {{bindAttr class=cervixFeeling.opening}}>&nbsp;</td>
                <td {{bindAttr class=cervixFeeling.position}}>&nbsp;</td>
                <td {{bindAttr class=cervixFeeling.inclining}}>&nbsp;</td>
                <td>{{cervixFeeling.comment}}</td>
                <td>
                  {{#link-to 'cervix-feeling' model.id cervixFeeling.id classNames="btn btn-default btn-sm"}}
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  {{/link-to}}
                  <button {{action 'remove' cervixFeeling}} type="button" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  </button>
                </td>
              </tr>
            {{/if}}
          {{/if}}
        {{/if}}
      {{/each}}
      </tbody>
    </table>
    <div>
      {{#link-to 'cervix-feeling' model.id 'new' classNames="btn btn-default btn-sm"}}
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Ajouter
      {{/link-to}}
    </div>
  </div>
</div>