<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center">Règles du cycle {{model.id}}</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Jour du cycle</th>
          <th>Date</th>
          <th>Présence de règles</th>
          <th>Commentaire</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      {{#each period in model.periods}}
        <tr class="text-center">
          <td>{{period.cycle_day_number}}</td>
          <td>{{date-format period.date "DD/MM/YY HH:mm"}}</td>
          <td>
          {{#if period.present}}
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          {{else}}
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          {{/if}}
          </td>
          <td>{{period.comment}}</td>
          <td>
            {{#link-to 'period' model.id period.id classNames="btn btn-default btn-sm"}}
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            {{/link-to}}
            <button {{action 'remove' period}} type="button" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
          </td>
        </tr>
      {{/each}}
      
      </tbody>
    </table>
    <div>
      {{#link-to 'period' model.id 'new' classNames="btn btn-default btn-sm"}}
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Ajouter
      {{/link-to}}
    </div>
  </div>
</div>