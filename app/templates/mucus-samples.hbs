<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <h3 class="text-center">Glaires</h3>
    {{#if model.mucusSamples}}
      <table class="table table-hover">
      <thead class="text-center">
        <tr class="hidden-xs">
          <th></th>
          <th colspan="2" >Observations externes</th>
          <th colspan="2">Observations internes</th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <th>Jour</th>
          <th>S<span class="hidden-xs">Sensation</span></th>
          <th class="hidden-xs">Consistance</th>
          <th>P<span class="hidden-xs">résence au col</span></th>
          <th class="hidden-xs">Consistance</th>
          <th class="hidden-xs">Commentaire</th>
          <th><span class="hidden-xs">Actions</span></th>
        </tr>
      </thead>
      <tbody>
      {{#each model.mucusSamples as |mucus|}}
        {{#if mucus.isNew}}
        {{else}}
          {{#if mucus.is_first_day_of_mucus_or_wet}}
            <tr data-toggle="tooltip" data-placement="bottom" title="Premier jour d'humidité ou de présence de glaire cervicale, début de la phase II" class="mucus-sample text-center info">
              <td>{{mucus.cycle_day_number}} ({{date-format mucus.date "DD/MM/YY"}})</td>
              <td>{{mucus-sample-sensation sensation=mucus.sensation}}</td>
              <td class="hidden-xs">{{mucus.apparency_at_vulva}}</td>
              <td>{{mucus-sample-at-cervix at_cervix=mucus.at_cervix}}</td>
              <td class="hidden-xs">{{mucus.apparency_at_cervix}}</td>
              <td class="hidden-xs">{{mucus.comment}}</td>
              <td>
                {{#link-to 'mucus-sample' model.id mucus.id (query-params extended=true isPopup=true) classNames="btn btn-default btn-sm"}}
                  <i class="icon ion-edit"></i>
                {{/link-to}}
                <button {{action 'remove' mucus}} type="button" class="btn btn-default btn-sm">
                  <i class="icon ion-android-close"></i>
                </button>
              </td>
            </tr>
          {{else}}
            {{#if mucus.is_mucus_peak_plus_3_days}}
            <tr data-toggle="tooltip" data-placement="bottom" title="Pic de glaire cervicale + 3 jours, début de la phase III" class="mucus-sample text-center info">
              <td>{{mucus.cycle_day_number}} ({{date-format mucus.date "DD/MM/YY"}})</td>
              <td>{{mucus-sample-sensation sensation=mucus.sensation}}</td>
              <td class="hidden-xs">{{mucus.apparency_at_vulva}}</td>
              <td>{{mucus-sample-at-cervix at_cervix=mucus.at_cervix}}</td>
              <td class="hidden-xs">{{mucus.apparency_at_cervix}}</td>
              <td class="hidden-xs">{{mucus.comment}}</td>
              <td>
                {{#link-to 'mucus-sample' model.id mucus.id (query-params extended=true isPopup=true) classNames="btn btn-default btn-sm"}}
                  <i class="icon ion-edit"></i>
                {{/link-to}}
                <button {{action 'remove' mucus}} type="button" class="btn btn-default btn-sm">
                  <i class="icon ion-android-close"></i>
                </button>
              </td>
            </tr>
            {{else}}
            <tr class="mucus-sample text-center">
              <td>{{mucus.cycle_day_number}} ({{date-format mucus.date "DD/MM/YY"}})</td>
              <td>{{mucus-sample-sensation sensation=mucus.sensation}}</td>
              <td class="hidden-xs">{{mucus.apparency_at_vulva}}</td>
              <td>{{mucus-sample-at-cervix at_cervix=mucus.at_cervix}}</td>
              <td class="hidden-xs">{{mucus.apparency_at_cervix}}</td>
              <td class="hidden-xs">{{mucus.comment}}</td>
              <td>
                {{#link-to 'mucus-sample' model.id mucus.id (query-params extended=true isPopup=true) classNames="btn btn-default btn-sm"}}
                  <i class="icon ion-edit"></i>
                {{/link-to}}
                <button {{action 'remove' mucus}} type="button" class="btn btn-default btn-sm">
                  <i class="icon ion-android-close"></i>
                </button>
              </td>
            </tr>
            {{/if}}
          {{/if}}
        {{/if}}
      {{/each}}
      </tbody>
    </table>
    {{/if}}
    <div class="text-center">
      {{#link-to 'mucus-sample' model.id 'new' (query-params extended=true isPopup=true) classNames="btn btn-default btn-sm"}}
        <i class="icon ion-plus-round"></i>&nbsp;Ajouter
      {{/link-to}}
    </div>
  </div>
</div>