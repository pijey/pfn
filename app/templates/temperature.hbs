{{cyclesDayNumber}}<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center">Température {{model.id}}</h2>
    <form class="form-horizontal" role="form" {{action 'ok' on='submit' target=view}}>
      <div class="form-group">
        {{#if inline}}
        {{else}}
        <label for="inputCycleDayNumber" class="col-sm-3 control-label">Jour du cycle</label>
        <div class="input-group col-sm-6">
          {{input type="text" class="form-control" id="inputCycleDayNumber" value=model.cycle_day_number readonly=true}}
        </div>
        {{/if}}
        <div {{bindAttr class="errors.date.length:has-error:has-success"}}>
          <label for="inputDate" class="col-sm-3 control-label">Date</label>
          <div class="input-group col-sm-6">
            {{bs-datetimepicker date=model.date format='DD/MM/YYYY HH:mm'}}
            {{!-- {{input type="text" id="inputDate" value=model.date}} --}}
          </div>
        </div>
        <div {{bindAttr class="errors.temperature.length:has-error:has-success"}}>
          <label for="inputTemperature" class="col-sm-3 control-label">Température</label>
          <div class="input-group col-sm-6">
            {{!-- {{#if errors.temperature}}
              <div class="alert error">
                <ul class="list-group">
                {{#each error in errors.temperature}}
                  <li class="list-group-item list-group-item-danger">Température : {{error}}</li>
                {{/each}}
                </ul>
              </div>
            {{/if}} --}}
            {{input type="text" class="form-control" id="inputTemperature" value=model.temperature}}
            {{#if errors.temperature.length}}
              <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
            {{else}}
              <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
            {{/if}}
          </div>
        </div>
        <div {{bindAttr class="errors.temperature.length:has-error:has-success"}}>
          <label for="inputTemperatureCorrected" class="col-sm-3 control-label">Température corrigée</label>
          <div class="input-group col-sm-6">
            {{input type="text" class="form-control" id="inputTemperatureCorrected" value=model.temperature_corrected readonly="true"}}
            {{#if errors.temperature_corrected.length}}
              <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
            {{else}}
              <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
            {{/if}}
          </div>
        </div>
        <label for="inputTemperatureIgnore" class="col-sm-3 control-label">Ignorer</label>
        <div class="input-group col-sm-6">
          {{input type="checkbox" class="form-control" id="inputTemperatureIgnore" checked=model.ignore}}
        </div>
        <label for="inputTemperatureComment" class="col-sm-3 control-label">Commentaires</label>
        <div class="input-group col-sm-6">
          {{input type="text" class="form-control" id="inputTemperatureComment" value=model.comment}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3">
          <button {{action "save" model}} class="btn btn-default" {{bindAttr disabled=isInvalid }}>
            {{#if model.isSaving}}
              <img src="assets/images/loader.gif" alt="">
            {{else}}
              {{#if model.isDirty}}
                <span class="glyphicon glyphicon-floppy-save"></span>
              {{else}}
                <span class="glyphicon glyphicon-floppy-saved"></span>
              {{/if}}
            {{/if}}
            &nbsp;Enregistrer
          </button>
          {{#if inline}}
          {{else}}
          <button {{action "cancel" model}} class="btn btn-default">
            <span class="glyphicon glyphicon-remove"></span>
            &nbsp;Annuler
          </button>
          {{/if}}
        </div>
      </div>
    </form>
    <div>
      {{#if errors}}
        <ul class="list-group">
        {{#each error in errors.date}}
          <li class="list-group-item list-group-item-danger">Date : {{error}}</li>
        {{/each}}
        {{#each error in errors.temperature}}
          <li class="list-group-item list-group-item-danger">Température : {{error}}</li>
        {{/each}}
        {{#each error in errors.temperature_corrected}}
          <li class="list-group-item list-group-item-danger">Température corrigée : {{error}}</li>
        {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
</div>